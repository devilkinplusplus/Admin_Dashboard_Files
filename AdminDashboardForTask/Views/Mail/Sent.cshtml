@model List<EntityLayer.Concreate.FileOperation>
@{
    ViewData["Title"] = "Sent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <a href="/Mail/CreateMail" class="btn btn-primary btn-block">Compose</a>
                <table class="table table-xs mb-0">
                    <thead>
                        <tr>
                            <td>To</td>
                            <td>Subject</td>
                            <td>Date</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.ReceiverUser.Username</td>
                                <td>@item.Category.FileName</td>
                                <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
