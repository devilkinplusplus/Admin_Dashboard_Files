@model IEnumerable<EntityLayer.Concreate.FileOperation>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Email</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Inbox</a></li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <a href="/Mail/CreateMail" class="btn btn-primary btn-block">Compose</a>
                <table class="table table-xs mb-0">
                    <thead>
                        <tr>
                            <th></th>
                            <td>Sender</td>
                            <td>Subject</td>
                            <td>Date</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                     <a href="/Mail/DownloadMail/@item.CategoryID"
                                   class="list-group-item border-0 text-primary p-r-0">
                                        Download
                                    </a>
                                </td>
                                <td>@item.SenderUser.Username</td>
                                <td>@item.Category.FileName</td>
                                <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
